<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Create New Form</h1>
  
  <%= form_with(model: @form, class: "max-w-md mx-auto") do |f| %>
    <% if @form.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Oops! Some errors prevented the form from being saved:</strong>
        <ul>
          <% @form.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4" id="mail-opt" style="display: none;">
      <%= f.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :processed_in_job, "Processing Method", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.select :processed_in_job, 
          [['Main Thread', false], ['Background Job', true]], 
          {},
          id:'show-mail-select',
          class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= f.submit "Submit Form", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>
</div>