<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">All Forms</h1>
  
  <%= link_to "Create New Form", new_form_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>

  <% if @forms.any? %>
    <div class="grid gap-4">
      <% @forms.each do |form| %>
        <div class="border rounded p-4 shadow-md">
          <h2 class="text-xl font-semibold"><%= form.name %></h2>
          <p class="text-gray-600"><%= form.description %></p>
          <p>Processing Method: <%= form.processed_in_job? ? 'Background Job' : 'Main Thread' %></p>
          <%= link_to "View Details", form_path(form), class: "text-blue-500 hover:underline" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No forms have been created yet.</p>
  <% end %>
</div>