<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Form Details</h1>
  
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Name:</strong>
      <p class="text-gray-900"><%= @form.name %></p>
    </div>

    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Description:</strong>
      <p class="text-gray-900"><%= @form.description %></p>
    </div>

    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Processing Method:</strong>
      <p class="text-gray-900"><%= @form.processed_in_job? ? 'Background Job' : 'Main Thread' %></p>
    </div>

    <% if @form.response %>
      <div class="mb-4">
        <strong class="block text-gray-700 text-sm font-bold mb-2">AI Response:</strong>
        <p class="text-gray-900"><%= @form.response.ai_response %></p>
        <p class="text-sm text-gray-600">Status: <%= @form.response.status %></p>
      </div>
    <% end %>

    <%= link_to "Back to Forms", forms_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
</div>